#!/bin/bash
set -e
MODEL=$1

IN_JSON="data/test_in.json"
SENTENCES="data/test_sentences.txt"
CONTAINER="cpllab/language-models:${MODEL}"
SURPRISAL="data/test_surp_${MODEL}.txt"
OUT_JSON="data/test_out_${MODEL}.json"

echo "INPUT FILE: ${IN_JSON}"
echo "CONTAINER: ${CONTAINER}"

printf "** Extracting sentences..."
python get_sentences.py --i ${IN_JSON} --o ${SENTENCES}
printf "\r** Extracting sentences ===> ${SENTENCES}\n"

# show spinning progress icon while getting surprisals
docker run --rm -i ${CONTAINER} \
    get_surprisals /dev/stdin < $SENTENCES > ${SURPRISAL} 2>err &
pid=$! # process id of command
spin='-\|/'
i=0
while kill -0 $pid 2>err
do
  i=$(( (i+1) %4 ))
  printf "\r** Getting surprisals... ${spin:$i:1}"
  sleep .1
done
printf "\r** Getting surprisals ===> ${SURPRISAL}\n"

printf "** Aggregating surprisals..."
python agg_surprisals.py --surprisal ${SURPRISAL} --model ${MODEL} --i ${IN_JSON} --o ${OUT_JSON}
printf "\r** Aggregating surprisals ===> ${OUT_JSON}\n"
